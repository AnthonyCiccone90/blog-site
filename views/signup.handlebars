 <h2 class="page-title">Sign up</h2>
 

<form action="/signup" method="POST"></form>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign up</button>
      </div>
    </form>


<script>
  // Add JavaScript to show the success message when the response is received
  const signupForm = document.querySelector('form');
  const signupMessage = document.getElementById('signup-message');

  signupForm.addEventListener('submit', async (event) => {
    event.preventDefault();

    const response = await fetch('/signup', {
      method: 'POST',
      body: new FormData(signupForm),
    });

    const result = await response.json();

    if (response.status === 200) {
      // Show the success message and redirect to the dashboard
      signupMessage.textContent = result.message;
      signupMessage.style.display = 'block';
      window.location.href = '/dashboard';
    } else {
      // Handle errors if needed
      console.error(result.error);
    }
  });
</script>